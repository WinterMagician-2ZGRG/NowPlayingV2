<Controls:MetroWindow
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls" x:Class="NowPlayingV2.UI.OAuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NowPlayingV2.UI"
        mc:Ignorable="d"
        GlowBrush="{DynamicResource AccentColorBrush}"
        Title="OAuthWindow" Height="471.498" Width="828.604">
    <DockPanel>
        <TabControl>
            <TabItem Header="ログイン">
                <StackPanel Margin="5">
                    <Label Content="以下の「ブラウザを開いて認証」ボタンをクリックしてTwitterへログインしてアプリへの権限を許可してください。" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Button Content="ブラウザを開いて認証する" Width="180" Style="{StaticResource AccentedSquareButtonStyle}"/>
                </StackPanel>
            </TabItem>
            <TabItem Header="PINの入力">
                <Grid/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Controls:MetroWindow>
